<% provide(:title, "Forgot password") %>


<!-- start section -->
<section class="section white-backgorund">
    <div class="container">
        <div class="row">
            <!-- end sidebar -->
            <div class="col-md-9 col-md-offset-1">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <h2 class="title">Reset Password</h2>
                    </div><!-- end col -->
                </div><!-- end row -->
                
                <hr class="spacer-5"><hr class="spacer-20 no-border">
                
                <div class="row">
                    <div class="col-md-9 col-md-offset-2">
                        <p>Lost your password? Please enter your username or email address. You will receive a link to create a new password via email.</p>

                        <%= form_for(:password_reset, url: password_resets_path, class: "form-group") do |f| %>
                        	<div class="form-group">
                        		<%= f.label :email,"Email address" %>
					      		<%= f.email_field :email, class: 'form-control input-md', id: "email", placeholder: "Email Address" %>
                        	</div>					      

						    <div class="form-group">
						      	<%= f.submit "Reset Password", class: "btn btn-default round btn-md" %>
						    </div>					      
					    <% end %>
                    </div><!-- end col -->
                </div><!-- end row -->
            </div><!-- end col -->
        </div><!-- end row -->                
    </div><!-- end container -->
</section>
        <!-- end section -->
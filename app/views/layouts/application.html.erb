<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>

    <%= render 'layouts/metadata' %>

    <!--Favicon-->
    <%= favicon_link_tag 'img/favicon.ico', rel: 'shortcut icon', type: 'image/x-icon' %>
    <%= favicon_link_tag 'img/favicon.ico', rel: 'icon', type: 'image/x-icon' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- Google fonts -->
    <%= render 'layouts/googlefonts' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'http://maps.googleapis.com/maps/api/js?key=AIzaSyBfvtuIHyjwzEsCDnVtGiv-G7CpsWbHxl4' %>
  </head>

  <body>

  	<%= render 'layouts/header' %>    

    <% if flash.any? %>
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}", style: "margin-bottom: 0px") %>
      <% end %>
    <% else %>
      <%= render 'layouts/breadcrumbs' %>
    <% end %>

    <%= yield %>

    <%= render 'layouts/footer' %>

    <%= render 'layouts/viewmodal' %>

    <%= render 'layouts/loginmodal' %>

    <%= render 'layouts/registermodal' %>

  </body>
</html>
